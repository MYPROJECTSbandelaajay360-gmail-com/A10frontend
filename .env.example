# App Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=MusterBook
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/hrms?schema=public"

# NextAuth
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-super-secret-key-min-32-characters-long

# API Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
API_URL=http://localhost:4000

# Email Service
EMAIL_SERVICE_URL=http://localhost:4007
EMAIL_SERVICE_AUTH_TOKEN=your_email_service_auth_token_min_32_chars

# Upload Settings
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
UPLOAD_DIR=./public/uploads

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
